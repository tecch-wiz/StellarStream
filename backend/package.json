  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/ --ignore-pattern 'src/generated/**' --ignore-pattern 'src/__tests__/**' --ignore-pattern '**/*.d.ts'",
    "type-check": "tsc --noEmit",
