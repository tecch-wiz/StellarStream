{
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "src/generated/**/*",
    "src/__tests__/**/*",
    "**/*.d.ts",
    "dist/**",
    "node_modules/**"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "off"
  },
  "env": {
    "node": true,
    "es2022": true
  }
}
